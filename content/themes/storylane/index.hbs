{{!< default}}

    <header id="site-head"
    {{#if @blog.cover}}
    style="background-image: url({{@blog.cover}});background-size: auto 100%;"
    {{/if}}
    >
        <div class="vertical">
            <div id="site-head-content" class="inner">
                {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{@blog.title}" /></a>{{/if}}
                <h1 class="blog-title">{{@blog.title}}</h1>
                <h2 class="blog-description">{{@blog.description}}</h2>
            </div>
        </div>
    </header>


<main class="content" role="main">
    <div class="article-block js-masonry">

    {{#foreach posts}}

    <article class="{{post_class}}">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <span class="post-meta">
                <span class="post-user">{{author.name}}</span>
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
                {{#if author.image}}<span class="post-avatar"><img src="{{author.image}}" alt="" /></span>{{/if}}
            </span>
        </header>
        <div class="inside">
            <section class="post-excerpt">
                {{content words="50"}}&hellip;
                 <p class="post-tags">{{#if tags}}{{tags}}{{/if}}</p>
                 <a class="more" href="{{url}}">Read more</a>
            </section>
        </div>
    </article>

    {{/foreach}}

</div>
{{pagination}}
</main>
